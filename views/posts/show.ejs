<% layout('layouts/boilerplate')%>

<link rel="stylesheet" href="/stylesheets/styles.css">

<div class="container my-5 col-md-6">
    <div class="row">
    <!-- <div class="col-md-1"></div> -->
<div class="post col-md-7">
    <div class="card">
        <div class="card-body">
            <div class="container">
<div class="row">
    <div class="col-md-8">
        <div class="d-flex story">
            <img src="<%=user.image.url%>" alt="" class="rounded-circle" height="40">
       <div class="mt-2">
        <a href="" class="text-dark"></a>
        <strong class="mt-5 ml-2"><%= post.author.username%></strong>
       </div>
        </div>
    </div>
    <div class="col-md-4">
        <i class="fas fa-ellipsis-h fa-lf mt-2 float-right"></i>
    </div>
</div>

            </div>
        </div>

        <div class="bg-image hover-overlay ripple shadow-1-strong rounded-0">
            <div id="postCarousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <% post.images.forEach((img, i) => {  %>
                    <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                        <img src="<%= img.url%>" class="d-block w-100" alt="">
                    </div>
                    <% }) %>
    
                </div>
                <% if(post.images.length > 1) {%>
                <a class="carousel-control-prev" href="#postCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#postCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
                <% } %>
            </div>
        </div>

<div class="card-body">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <!-- <form action=""></form> -->
       <i class="far fa-heart fa-lg"></i>  
       <!-- <i class="fa fa-heart fa-lg"></i> if user likes them fill in heart and like ++ -->
       <i class="far fa-comment fa-lg ml-2"></i>
       <i class="far fa-paper-plane fa-lg ml-2"></i>
            </div>
            <div class="col-md-4 text-right">
                <i class="far fa-bookmark fa-lg"></i>
            </div>
        </div>
<div class="row">
    <div class="col-md-8">
      <small><%= post.likes %> likes</small>  
      <small><%= post.postedAt %></small>  

    </div>
</div>
<div class="row">
<div class="col-md-12 mt-1">
    <p><strong class="text-dark"> <%= post.author.username%> </strong>  
<%= post.caption %>... <small class="my-1">more</small>
</p>
</div>
</div>
<div class="row">
    <form action="/posts/<%=post._id%>/comments" method="POST">
        <div class="mb-3">
             <!-- <textarea name="comment[body]" id="comment" cols="30" rows="3"></textarea> -->
            <textarea role="textbox" contenteditable="true" data-text="Leave a comment..." placeholder="Leave a comment..." class="textarea form-control" name="comment[body]" id="comment" cols="30" rows="1"></textarea>
        </div>
        <button class="btn btn-success">Submit</button>
    
     </form>
</div>
<div class="row">
    <small class="my-1">View all comments</small>

    <% for(let comment of post.comments) {%>
        <div class="mb-3">
   <p><strong>username</strong> <%= comment.body  %></p>
   <form action="/posts/<%=post._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
   <button>Delete</button>
   </form>
        </div>
   <% } %>

    
</div>
    </div>
</div>

    </div>
</div>
<div class="col-md-2 d-md-none d-lg-block">Content</div>
</div> 
</div>

    

<div class="card-body">
    <a class="card-link btn btn-info" href="/posts/<%=post._id%>/edit">Edit Post</a>
    <form class="d-inline" action="/posts/<%=post._id%>?_method=DELETE" method="POST">
        <button class="btn btn-danger">Delete Post</button>
    </form>
</div>


